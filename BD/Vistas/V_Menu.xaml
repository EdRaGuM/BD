<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BD.Vistas.V_Menu"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="CenterAndExpand"
                     Spacing="25">

            <Frame BackgroundColor="#1E1E1E"
                   HasShadow="True"
                   CornerRadius="20"
                   Padding="25"
                   BorderColor="#26D1FF"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand">

                <StackLayout Spacing="20"
                             HorizontalOptions="Center">

                    <Label Text="Menú Principal"
                           FontSize="36"
                           TextColor="#26D1FF"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />

                    <StackLayout Orientation="Horizontal"
                                 Margin="0,10"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="Center">
                        
                        <BoxView HeightRequest="1"
                                 BackgroundColor="#333"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="Center" />
                        
                    </StackLayout>

                    <Button Text="Menú de Evidencias"
                            x:Name="btnEvidencias"
                            Clicked="btnEvidencias_Clicked"
                            BackgroundColor="#26D1FF"
                            TextColor="Black"
                            CornerRadius="15"
                            FontSize="20"
                            HeightRequest="55"
                            WidthRequest="260"/>

                    <Button Text="Consultar Evidencias"
                            x:Name="btnConsultar"
                            Clicked="btnConsultar_Clicked"
                            BackgroundColor="#1CA6D8"
                            TextColor="White"
                            CornerRadius="15"
                            FontSize="20"
                            HeightRequest="55"
                            WidthRequest="260"/>

                    <Button Text="Menú de Materias"
                            x:Name="btnMaterias"
                            Clicked="btnMaterias_Clicked"
                            BackgroundColor="#26D1FF"
                            TextColor="Black"
                            CornerRadius="15"
                            FontSize="20"
                            HeightRequest="55"
                            WidthRequest="260"/>

                    <Button Text="Consultar Materias"
                            x:Name="btnConsultarMaterias"
                            Clicked="btnConsultarMaterias_Clicked"
                            BackgroundColor="#1CA6D8"
                            TextColor="White"
                            CornerRadius="15"
                            FontSize="20"
                            HeightRequest="55"
                            WidthRequest="260"/>

                    <Button Text="Salir"
                            x:Name="btnSalir"
                            Clicked="btnSalir_Clicked"
                            BackgroundColor="#FF4C4C"
                            TextColor="White"
                            CornerRadius="15"
                            FontSize="20"
                            HeightRequest="55"
                            WidthRequest="260"/>

                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
