<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="BD.Vistas.V_Inicio"  
             BackgroundColor="#121212"  
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="0">
        <Grid>
            <StackLayout Padding="0" Margin="0">
                <Frame HeightRequest="170"
                       HasShadow="False"
                       Padding="0"
                       CornerRadius="0"
                       BackgroundColor="#121212">
                    <Image Source="Banner"
                           Aspect="AspectFill"
                           Margin="0"/>
                </Frame>
            </StackLayout>

            <StackLayout Margin="15, 130, 15, 0">
                <Frame BackgroundColor="#1E1E1E"
                       HasShadow="True"
                       CornerRadius="20"
                       HeightRequest="650"
                       BorderColor="#26D1FF"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="CenterAndExpand">

                    <StackLayout Padding="20">

                        <Label Text="¡Bienvenido!"
                               FontSize="36"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#26D1FF"
                               Margin="0,10,0,20"/>

                        <Label Text="Accede a tu cuenta para continuar"
                               FontSize="16"
                               TextColor="#B0B0B0"
                               HorizontalOptions="Center"
                               Margin="0,0,0,25"/>

                        <Frame BackgroundColor="#333"
                               BorderColor="#26D1FF"
                               CornerRadius="30"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,0,0,15">

                            <StackLayout Orientation="Horizontal" 
                                         Padding="10">

                                <Image Source="Correo"
                                       HeightRequest="24"
                                       WidthRequest="24"
                                       VerticalOptions="Center"
                                       Margin="5,0"/>

                                <Entry Placeholder="Correo electrónico"
                                       TextColor="#EDEDED"
                                       PlaceholderColor="#888"
                                       x:Name="txtCorreo"
                                       FontSize="16"
                                       Keyboard="Email"
                                       HorizontalOptions="FillAndExpand"/>
                                
                            </StackLayout>
                            
                        </Frame>

                        <Frame BackgroundColor="#333"
                               BorderColor="#26D1FF"
                               CornerRadius="30"
                               Padding="0"
                               HasShadow="False">

                            <StackLayout Orientation="Horizontal" 
                                         Padding="10">

                                <Image Source="Password"
                                       HeightRequest="24"
                                       WidthRequest="24"
                                       VerticalOptions="Center"
                                       Margin="5,0"/>
                                
                                <Entry Placeholder="Contraseña"
                                       IsPassword="True"
                                       TextColor="#EDEDED"
                                       Keyboard="Numeric"
                                       PlaceholderColor="#888"
                                       FontSize="16"
                                       x:Name="txtContra"
                                       HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                        </Frame>

                        <Button Text="Iniciar Sesión"
                                BackgroundColor="#4BB7FF"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="15"
                                FontSize="20"
                                Margin="0,20,0,15"
                                x:Name="btnIniciarSesion"
                                Clicked="btnIniciarSesion_Clicked"/>

                        <StackLayout Orientation="Horizontal" 
                                     Margin="0,10" 
                                     HorizontalOptions="FillAndExpand" 
                                     VerticalOptions="Center">
                            
                            <BoxView HeightRequest="1" 
                                     BackgroundColor="#333" 
                                     HorizontalOptions="FillAndExpand" 
                                     VerticalOptions="Center" />
                            
                            <Label Text=" ó "
                                   TextColor="#888"
                                   FontSize="14"
                                   VerticalOptions="Center"
                                   Margin="5,0"/>
                            <BoxView HeightRequest="1" BackgroundColor="#333" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
                        </StackLayout>

                        <Label Text="¿No tienes cuenta?"
                               TextColor="#B0B0B0"
                               FontSize="14"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0"/>

                        <Button Text="Regístrate"
                                BackgroundColor="Transparent"
                                BorderColor="#26D1FF"
                                BorderWidth="2"
                                TextColor="#26D1FF"
                                FontAttributes="Bold"
                                CornerRadius="15"
                                FontSize="18"
                                Margin="0,10,0,0"
                                x:Name="btnNav"
                                Clicked="btnNav_Clicked"/>

                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </StackLayout>
</ContentPage>
